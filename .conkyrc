######################
# - Conky settings - #
######################
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
if_up_strictness link

imlib_cache_size 0
double_buffer yes
#no_buffers yes
background yes

format_human_readable

#####################
# - Text settings - #
#####################
#short_units yes
use_xft yes
xftfont Liberation Sans:size=10
override_utf8_locale yes
text_buffer_size 4096

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
#own_window_type normal
own_window_type dock
own_window_transparent yes
own_window_colour black
own_window_argb_visual yes
own_window_argb_value 100
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

alignment top_right
gap_x 12
gap_y 35
minimum_size 350 2000
maximum_width 350

default_bar_size 350 8

#########################
# - Graphics settings - #
#########################
draw_shades no
draw_graph_borders no
stippled_borders 1

default_color white
color0 white
color1 1793d0 
color2 white
color3 yellow

TEXT
##############
# - SYSTEM - #
##############
${voffset 70}${font Liberation Sans:style=Bold:size=12}SYSTEM $hr${font}
${voffset 0}${color0}${font}${color}
${goto 5}${font Liberation Sans:style=Bold:size=8}HOST:${font}${alignr}${color2}${exec hostname}${color}
${goto 5}${font Liberation Sans:style=Bold:size=8}UPTIME:${font}${alignr}${color2}${uptime}${color}

